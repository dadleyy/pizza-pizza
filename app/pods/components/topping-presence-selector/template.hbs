{{#basic-dropdown as |dropdown|}}
  <div class="is-inline-block">
    {{#dropdown.Trigger}}
      <button class="button">{{if selection selection "Select Level"}}</button>
    {{/dropdown.Trigger}}
  </div>
  {{#dropdown.Content class="dropdown-menu"}}
    <section class="dropdown-content">
      <a class="dropdown-item" role="button" onClick={{action "select" dropdown.actions.close "full"}}>Full</a>
      <a class="dropdown-item" role="button" onClick={{action "select" dropdown.actions.close "half"}}>Half</a>
      <a class="dropdown-item" role="button" onClick={{action "select" dropdown.actions.close "quarter"}}>Quarter</a>
    </section>
  {{/dropdown.Content}}
{{/basic-dropdown}}
